/* 调用示例: border-width(border-left, 1px, #000000) */
border-width(myDirection, myWidth= 1px, myColor= #000) {
  position: relative
  border: none
  &::before {
    content: ''
    position: absolute
    left: 0
    top: 0
    pointer-events: none 
    box-sizing: border-box
    -webkit-box-sizing: border-box
    {myDirection}: myWidth solid myColor
    @media screen and (min-device-pixel-ratio: 2), (-webkit-min-device-pixel-ratio:2){
      width: 200%
      height: 200%
      -webkit-transform-origin: left top
      transform-origin: left top
      transform: scale(0.5)
      -webkit-transform: scale(0.5)
    }
    @media screen and (min-device-pixel-ratio: 3), (-webkit-min-device-pixel-ratio:3){
      width: 300%
      height: 300%
      -webkit-transform-origin: left top
      transform-origin: left top
      transform: scale(0.3333)
      -webkit-transform: scale(0.3333)
    }
  }
}
/* 
转换vw设计稿的px宽度函数 
本设计稿是375 * 718
*/
base-width = 375
base-height = 718
mvw(px) {
  px / base-width * 100vw
}
mvh(px) {
  px / base-height * 100vh
}
